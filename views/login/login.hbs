<div class="container bg-light">
  <form class="form-signin" action="/login" method="POST">
    <img class="mb-4" src="/img/producao128px.png" alt="" width="72" height="72">
    <div>
      <h1 class="h3 mb-3 font-weight-normal">Faça seu login</h1>
      <label for="email" class="sr-only">Seu de E-mail</label>
      <input type="email" name="email" id="email" class="form-control mt-4" placeholder="Endereço de E-mail" required
        autofocus>
    </div>
    <div>
      <label for="senha" class="sr-only">Sua senha</label>
      <input type="password" name="senha" id="senha" class="form-control mt-4" placeholder="Senha" required>
    </div>

    <div class="mt-4">
      <button class="btn btn-lg btn-primary btn-block" type="submit">Entrar</button>
    </div>
    <br>
    <p style="color: blue;">Esqueci a senha...</p>
  </form>
</div>