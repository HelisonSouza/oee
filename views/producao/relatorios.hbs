<div class="container bg-light">

  <div class="row">
    <div class="col-sm-8">
      <h2>Relatórios de Produção</h2>
      <table class="table">
        <thead>
          <tr>
            <th scope="col">id</th>
            <th scope="col">Data de Inicio</th>
            <th scope="col">Lote</th>
            <th scope="col">Produto</th>
            <th scope="col">Planejado</th>
            <th scope="col">Produzido</th>
            <th scope="col">Defeito</th>
          </tr>
        </thead>
        <tbody>
          {{#each producoes}}
          <tr>
            <th scope="row">{{id}}</th>
            <td>{{data}}</td>
            <td>{{lote}}</td>
            <td>{{produto_id}}</td>
            <td>{{qtd_planejada}}</td>
            <td>{{qtd_produzida}}</td>
            <td>{{qtd_defeito}}</td>
          </tr>
          {{else}}
          <tr>
            <th scope="row">-</th>
            <td>-</td>
            <td>-</td>
            <td>-</td>
          </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
    <div class="col-sm-4 ">
      <!-- Formulário de consulta-->
      <div class="shadow p-3 mb-5 mt-4 bg-white rounded">
        <h4>Consulta de Produções:</h4>
        <form class="m-2" id="formConsulta" action="/producao/relatorio">
          <div class="form-group">
            <label>Data igual á:</label>
            <input type="date" class="form-control" name="dataExata">
          </div>
          <div class="form-group">
            <label>Período iniciando de:</label>
            <input type="date" class="form-control" name="incioPeriodo">
          </div>
          <div class="form-group">
            <label>Período finalizando em:</label>
            <input type="date" class="form-control" name="fimPeriodo">
          </div>
          <div class="form-group">
            <label>Lote</label>
            <input type="number" class="form-control" name="lote" placeholder="Lote da produção">
          </div>
          <div class="form-group">
            <label>ID do Produto</label>
            <input type="number" class="form-control" name="produtoId" placeholder="Id do produto">
          </div>
          <div class="form-group">
            <label>Nome do Produto</label>
            <input type="text" class="form-control" name="produtoNome" placeholder="Digite o nome do produto">
          </div>

          <button type="submit" class="btn btn-primary">Consultar</button>
          <button type="reset" class="btn btn-secondary">Cancelar</button>
      </div>
      </form>
    </div>
  </div>
</div>
</div>