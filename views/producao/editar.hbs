<div class="container bg-light">

  <div class="row">
    <div class="col-sm-8">
      <table class="table">
        <thead>
          <tr>
            <th scope="col">id</th>
            <th scope="col">Data de Inicio</th>
            <th scope="col">Lote</th>
            <th scope="col">Produto</th>
            <th scope="col">Planejado</th>
            <th scope="col">Produzido</th>
            <th scope="col">Defeito</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <th scope="row">{{producao.id}}</th>
            <td>{{producao.data}}</td>
            <td>{{producao.lote}}</td>
            <td>{{producao.produto}}</td>
            <td>{{producao.qtd_planejada}}</td>
            <td>{{producao.qtd_produzida}}</td>
            <td>{{producao.qtd_defeito}}</td>
          </tr>
        </tbody>
      </table>
    </div>

    <div class="col-sm-4 ">
      <!-- Formulário de edição-->
      <div class="shadow p-3 mb-5 mt-4 bg-white rounded formCadastrarProduto">
        <h4>Editar Produção:</h4>
        <form class="m-2" action="/producao/editar/{{producao.id}}" method="POST">
          <div class="form-group">
            <label for="data">Data de Hora</label>
            <input type="text" class="form-control" id="data" name="data" value="{{producao.data}}">
          </div>
          <div class="form-group">
            <label for="lote">Lote</label>
            <input type="text" class="form-control" id="lote" name="lote" value="{{producao.lote}}">
          </div>
          <div class="form-group">
            <label for="produto">Produto</label>
            <input type="text" class="form-control" id="produto" name="produto" value="{{producao.produto}}">
          </div>
          <div>
            <button type="submit" class="btn btn-primary">Salvar</button>
            <a href="/producoes">
              <button type="button" class="btn btn-secondary">Cancelar</button>
            </a>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>