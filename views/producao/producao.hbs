<div class="container bg-light">

  <div class="row">
    <div class="col-sm-8">
      <h3>Produções Cadastradas</h3>
      <table class="table">
        <thead>
          <tr>
            <th scope="col">id</th>
            <th scope="col">Data de Inicio</th>
            <th scope="col">Lote</th>
            <th scope="col">Produto</th>
            <th scope="col">Planejado</th>
            <th scope="col">Pausas</th>
            <th scope="col">Desativar</th>
            <th scope="col">Editar</th>
          </tr>
        </thead>
        <tbody>
          {{#each producao}}
          <tr>
            <th scope="row">{{id}}</th>
            <td>{{data}}</td>
            <td>{{lote}}</td>
            <td>{{produto.nome}}</td>
            <td>{{qtd_planejada}}</td>

            <td style='width: 40px'>
              <a href="/producao/atribuir_pausas/{{id}}">
                <button type="button" class="btn btn-light">
                  <img src="/bootstrap/icons/watch.svg" alt="Atribuir Pausa" width="24" height="24"
                    title="Atribuir Pausa">
                </button>
              </a>
            </td>
            <td style='width: 40px'>
              <a href="producao/desativar/{{id}}">
                <button type="button" class="btn btn-light">
                  <img src="/bootstrap/icons/trash.svg" alt="Desativar" width="24" height="24" title="Desativar">
                </button>
              </a>
            </td>
            <td style='width: 40px'>
              <a href="/producao/editar/{{id}}">
                <button type="button" class="btn btn-light">
                  <img src="/bootstrap/icons/pencil-square.svg" alt="Editar" width="24" height="24" title="Editar">
                </button>
              </a>
            </td>
          </tr>
          {{else}}
          <tr>
            <th scope="row">-</th>
            <td>-</td>
            <td>-</td>
            <td>-</td>
          </tr>
          {{/each}}
        </tbody>
      </table>
    </div>

    <div class="col-sm-4 ">
      <!-- Formulário de cadastro-->
      <div class="shadow p-3 mb-5 mt-4 bg-white rounded">
        <h4>Cadastrar Produção:</h4>
        <form class="m-2" action="/producao/cadastrar" method="POST">
          <div class="form-group">
            <label for="data">Data</label>
            <input type="date" class="form-control" id="data" name="data">
          </div>
          <div class="form-group">
            <label for="inicio">Horário de Inicio</label>
            <input type="time" class="form-control" id="inicio" name="inicio" placeholder="00:00">
          </div>
          <div class="form-group">
            <label for="lote">Lote</label>
            <input type="text" class="form-control" id="lote" name="lote" placeholder="Lote da produção">
          </div>
          <div class="form-group">
            <label for="produto_id">Produto</label>
            <select type="text" class="form-control" name="produto_id">
              {{#each produtos}}
              <option value={{id}}>{{nome}}</option>
              {{/each}}
            </select>
          </div>
          <div class="form-group">
            <label for="qtd_planejada">Quantidade</label>
            <input type="text" class="form-control" id="qtd_planejada" name="qtd_planejada" placeholder="Quantidade">
          </div>
          <div>
            <button type="submit" class="btn btn-primary">Cadastrar</button>
            <button type="reset" class="btn btn-secondary">Cancelar</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>