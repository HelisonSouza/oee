<div class="container bg-light">

  <div class="row">
    <div class="col-sm-8">
      <h2>Próximas Produções</h2>
      <table class="table">
        <thead>
          <tr>
            <th scope="col">ID</th>
            <th scope="col">Lote</th>
            <th scope="col">Produto</th>
            <th scope="col">Quantidade</th>
            <th scope="col">Inicia em:</th>
            <th scope="col">Start</th>
          </tr>
        </thead>
        <tbody>
          {{#each operacao}}
          <tr>
            <td>{{id}}</td>
            <td>{{lote}}</td>
            <td>{{produto}}</td>
            <td>{{qtd_planejada}}</td>
            <td>{{data}}</td>
            <td style='width: 40px'>
              <a href="operacao/start/{{id}}">
                <button type="button" class="btn btn-light btnStart">
                  <img src="/bootstrap/icons/caret-right.svg" alt="start" width="24" height="24" title="start">
                </button>
              </a>
            </td>
          </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>
</div>