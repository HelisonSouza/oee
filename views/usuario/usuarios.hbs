<div class="container bg-light">

  <div class="row">
    <div class="col-sm-8">
      <h2>Usuários Cadastrados</h2>
      <table class="table">
        <thead>
          <tr>
            <th scope="col">id</th>
            <th scope="col">Nome</th>
            <th scope="col">E-mail</th>
            <th scope="col">Tipo</th>
          </tr>
        </thead>
        <tbody>
          {{#each usuarios}}
          <tr>
            <th scope="row">{{id}}</th>
            <td>{{nome}}</td>
            <td>{{email}}</td>
            <td>{{tipo}}</td>
            <td style='width: 40px'>
              <a href="usuarios/desativar/{{id}}">
                <button type="button" class="btn btn-light">
                  <img src="/bootstrap/icons/trash.svg" alt="desativar" width="24" height="24" title="desativar">
                </button>
              </a>
            </td>
            <td style='width: 40px'>
              <a href="usuarios/editar/{{id}}">
                <button type="button" class="btn btn-light">
                  <img src="/bootstrap/icons/pencil-square.svg" alt="editar" width="24" height="24" title="editar">
                </button>
              </a>
            </td>
          </tr>
          {{else}}
          <tr>
            <th scope="row">-</th>
            <td>-</td>
            <td>-</td>
            <td>-</td>
          </tr>
          {{/each}}
        </tbody>
      </table>
    </div>

    <div class="col-sm-4 ">
      <!-- Formulário de cadastro-->
      <div class="shadow p-3 mb-5 mt-4 bg-white rounded">
        <h4>Cadastrar Usuário:</h4>
        <form class="m-2" action="/usuarios" method="POST">
          <div class="form-group">
            <label for="nome" id="nome">Nome</label>
            <input type="text" class="form-control" id="nome" name="nome" placeholder="Nome do usuário">
          </div>
          <div class="form-group">
            <label for="email" id="email">Email</label>
            <input type="email" class="form-control" id="email" name="email" placeholder="Email do Usuário">
          </div>
          <div class="form-group">
            <label for="tipo">Tipo de permissão</label>
            <select name="tipo" class="form-control" id="formSelectTipo">
              <option value="Operador">Operador</option>
              <option value="PCP">PCP</option>
              <option value="Administrador">Administrador</option>
              <option value="Gestor">Gestor</option>
            </select>
          </div>
          <div class="form-group">
            <label for="senha" id="senha">Senha</label>
            <input type="text" class="form-control" id="senha" name="senha" placeholder="Senha de cadastro">
          </div>
          <div>
            <button type="submit" class="btn btn-primary">Cadastrar</button>
            <button type="reset" class="btn btn-secondary">Cancelar</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>