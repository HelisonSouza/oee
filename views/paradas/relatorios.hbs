<div class="container bg-light">

  <div class="row">
    <div class="col-sm-8">
      <h2>Relatórios de Paradas</h2>
      <table class="table">
        <thead>
          <tr>
            <th scope="col">id</th>
            <th scope="col">Inico</th>
            <th scope="col">Fim</th>
            <th scope="col">Duração</th>
            <th scope="col">Motivo</th>
            <th scope="col">Usuário</th>
          </tr>
        </thead>
        <tbody>
          {{#each paradas}}
          <tr>
            <th scope="row">{{id}}</th>
            <td>{{inicio}}</td>
            <td>{{fim}}</td>
            <td>{{duracao}}</td>
            <td>{{motivo}}</td>
            <td>{{usuario}}</td>
          </tr>
          {{else}}
          <tr>
            <th scope="row">-</th>
            <td>-</td>
            <td>-</td>
            <td>-</td>
          </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
    <div class="col-sm-4 ">
      <!-- Formulário de consulta-->
      <div class="shadow p-3 mb-5 mt-4 bg-white rounded">
        <h4>Consulta de Cadastro de Paradas:</h4>
        <form class="m-2" id="formConsulta" method="GET">
          <div class="form-group">
            <label>Cadastrado no período inicial entre:</label>
            <input type="date" class="form-control" name="incioPeriodo">
          </div>
          <div class="form-group">
            <input type="date" class="form-control" name="fimPeriodo">
          </div>
          <div class="form-group">
            <label>Motivo</label>
            <input type="text" class="form-control" name="produtoNome" placeholder="Digite o motivo">
          </div>
          <div class="form-group">
            <label>Usuário</label>
            <input type="text" class="form-control" name="produtoNome" placeholder="Digite o nome do usuário">
          </div>
          <button type="submit" class="btn btn-primary">Consultar</button>
          <button type="reset" class="btn btn-secondary">Cancelar</button>
      </div>
      </form>
    </div>
  </div>
</div>
</div>